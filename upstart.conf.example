#!upstart

description "ses-proxy server"
author      "@garrows"

start on (local-filesystems and net-device-up IFACE!=lo)
start on starting rc

respawn limit 5 10
respawn

script
    ses-proxy --port 2525 --config /ses-credentials.json >> /var/log/ses-proxy/ses-proxy.log 2>&1
end script

pre-start script
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Starting" >> /var/log/ses-proxy/ses-proxy.log
end script

pre-stop script
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Stopping" >> /var/log/ses-proxy/ses-proxy.log
end script
